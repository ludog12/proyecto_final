<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if(alert) { %>
    <script>
      Swal.fire({
        title: '<%= alertTitle%>',
        text: '<%= alertMenssage%>',
        icon: '<%= alertIcon%>',
        showConfirmButton: '<%= showConfirmButton %>',
        timer: '<% timer %>'
      }).then(()=>{
        window.location='/<%= ruta %>'
      })

    </script>

